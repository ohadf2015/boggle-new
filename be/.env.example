# Server Configuration
PORT=3001
HOST=0.0.0.0

# Environment
NODE_ENV=production

# CORS Configuration
# For production, set to your frontend domain
# For development, use * to allow all origins
CORS_ORIGIN=*

# Redis Configuration (Optional)
# Redis is used for distributed game state storage
# If not configured, the app will use in-memory storage
#
# Option 1: Use REDIS_URL (preferred for Railway/cloud providers)
# REDIS_URL=redis://default:password@host:port
#
# Option 2: Use individual variables
# Standard naming:
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# REDIS_PASSWORD=your_password_here
#
# Railway also provides these (automatically supported):
# REDISHOST, REDISPORT, REDIS_PASSWORD

# Redis Performance Configuration
# TTL for game state in Redis (in seconds, default: 3600 = 1 hour)
REDIS_GAME_TTL=3600

# WebSocket Rate Limiting
# Maximum messages per window (default: 50)
MESSAGE_RATE_LIMIT=50
# Rate limit window in milliseconds (default: 10000 = 10 seconds)
RATE_LIMIT_WINDOW=10000
