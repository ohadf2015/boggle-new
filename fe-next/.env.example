# LexiClash Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# ===========================================
# CORS CONFIGURATION
# ===========================================
# For production, set to your domain(s), comma-separated
# Mobile platforms (capacitor://localhost, http://localhost) are automatically included
CORS_ORIGIN=*

# ===========================================
# MOBILE BUILD CONFIGURATION (Capacitor)
# ===========================================
# Set to 'true' when building for mobile (static export)
# This flag:
#   - Enables Next.js static export (output: 'export')
#   - Disables image optimization
#   - Uses production URLs for API/Socket connections
NEXT_PUBLIC_IS_MOBILE=false

# Production backend URL for mobile builds
# This is where the mobile app will connect for API and WebSocket
NEXT_PUBLIC_PRODUCTION_URL=https://your-app.railway.app

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
# WebSocket URL (optional - defaults to current host on web)
# For mobile, NEXT_PUBLIC_PRODUCTION_URL is used instead
NEXT_PUBLIC_WS_URL=

# ===========================================
# REDIS CONFIGURATION (for horizontal scaling)
# ===========================================
REDIS_URL=redis://localhost:6379
# Or use individual settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Redis key prefix (useful for multiple environments on same Redis)
REDIS_PREFIX=lexiclash

# Redis TTL settings (seconds)
REDIS_GAME_TTL=3600
REDIS_TOURNAMENT_TTL=10800
REDIS_LEADERBOARD_TTL=900

# ===========================================
# RATE LIMITING
# ===========================================
RATE_MAX_MESSAGES=100
RATE_WEIGHT_SUBMITWORD=10
RATE_WEIGHT_CHAT=1
RATE_WINDOW_MS=60000

# ===========================================
# AI SERVICE (Google Vertex AI)
# ===========================================
# JSON credentials for Google Cloud (for word validation)
GOOGLE_CREDENTIALS_JSON=

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
LOG_COLORS=true
LOG_TIMESTAMP=true
EVENT_LOOP_MONITOR_INTERVAL_MS=5000

# ===========================================
# DEPLOYMENT
# ===========================================
# Railway replica ID (set automatically by Railway)
RAILWAY_REPLICA_ID=
