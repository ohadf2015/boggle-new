{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "..",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "noEmit": false,
    "noImplicitAny": false,
    "allowJs": false,
    "baseUrl": "..",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./utils/schemas.ts",
    "./modules/scoringEngine.ts",
    "../shared/schemas/*.ts",
    "../shared/types/*.ts",
    "../shared/stateMachines/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
